{
  "name": "bettergpt",
  "version": "0.1.0",
  "description": "A Chrome extension providing an intelligent, context-aware AI assistant",
  "private": true,
  "scripts": {
    "build": "node build.js",
    "dev": "node build.js && echo 'Build complete. Load dist/ folder in Chrome'",
    "watch": "node build.js && echo 'Watch mode not yet configured'",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "format": "prettier --write 'src/**/*.{ts,json}'",
    "format:check": "prettier --check 'src/**/*.{ts,json}'",
    "test": "echo 'Testing to be configured'"
  },
  "keywords": [
    "chrome-extension",
    "ai",
    "assistant",
    "chatgpt",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/chrome": "^0.0.254",
    "@types/d3": "^7.4.0",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.7.4",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.50.1"
  },
  "dependencies": {
    "d3": "^7.8.5",
    "dexie": "^4.2.1",
    "jspdf": "^3.0.4"
  }
}
