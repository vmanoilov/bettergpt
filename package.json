{
  "name": "bettergpt",
  "version": "0.1.0",
  "description": "A Chrome extension providing an intelligent, context-aware AI assistant",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite build --watch --mode development",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .ts,.svelte",
    "lint:fix": "eslint . --ext .ts,.svelte --fix",
    "format": "prettier --write \"src/**/*.{ts,svelte,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,svelte,css,json}\"",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "chrome-extension",
    "ai",
    "assistant",
    "gpt",
    "svelte"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dexie": "^3.2.4",
    "fuse.js": "^7.0.0",
    "jszip": "^3.10.1",
    "file-saver": "^2.0.5",
    "dayjs": "^1.11.10"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^3.0.1",
    "@types/chrome": "^0.0.254",
    "@types/file-saver": "^2.0.7",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.35.1",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "svelte": "^4.2.8",
    "svelte-check": "^3.6.2",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.8",
    "vite-plugin-static-copy": "^1.0.0"
  }
}
